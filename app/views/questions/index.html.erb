<div class="container">
  <h2 class="title-lg mb">Все вопросы</h2>

  <% @questions.each do |question| %>

  <p class="mb-sm"><%= question.id %></p>
  <p class="mb-sm"><%= question.body %></p>
  <p class="mb-sm"><%= link_to "Вопрос #{question.id}", question_path(question) %></p>

  <% end %>

  <%= link_to 'Создать новый вопрос', new_question_path, class: 'button button-main' %>
</div>
