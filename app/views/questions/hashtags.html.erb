<div class="container mt-sm">
  <h2 class="title-lg">
    <%= @questions.count %>
    <%= inclination(@questions.count, 'вопрос', 'вопроса', 'вопросов') %>  (<%= render_with_hashtags("#" + @tag.name) %>) </h2>
</div>

<% @questions.each do |question| %>
  <div class="mt-sm container<%= " block-hide" if question.hidden? %>">
    <%= render question %>
  </div>
<% end %>
