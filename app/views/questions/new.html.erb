<div class="container">
  <h2 class="title-lg mb">Новый вопрос</h2>

  <%= form_with model: @question do |form| %>
    <p class="mt"><%= form.label :body, 'Текст вопроса' %></p>
    <p class="mt"><%= form.text_area :body, rows: 5, class: 'form-text-area' %></p>
    <p class="mt"><%= form.label :user_id %></p>
    <p class="mt"><%= form.number_field :user_id, class: 'form-text-field' %></p>
    <p class="mt"><%= form.submit 'Сохранить', class: 'button button-main' %></p>
  <% end %>
</div>
