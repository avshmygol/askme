<div class="mb-sm">
  <%= question.body %>
</div>

<div class="text-sm question-footer">
  <div class="text-grey">
    <%= l(question.created_at, format: :short) %>
  </div>

  <div>
    <%= link_to fa_icon('pencil 2x'), edit_question_path(question), title: 'Изменить вопрос' %>
    <%= button_to(fa_icon('eye-slash 2x'), hide_question_path(question), method: :put, title: 'Скрыть вопрос') unless question.hidden? %>
    <%= button_to(fa_icon('eye 2x'), view_question_path(question), method: :put, title: 'Отобразить вопрос') if question.hidden? %>
    <%= button_to fa_icon('trash-o 2x'), question_path(question), method: :delete,
  title: 'Удалить вопрос', form: {data: {turbo_confirm: 'Точно удалить вопрос?'}} %>
  </div>


</div>
