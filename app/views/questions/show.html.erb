<div class="container">
  <h2 class="title-lg mb">Вопрос <%= @question.id %></h2>

  <p class="mb-sm"><%= @question.body %></p>
  <p class="mb-sm"><%= @question.user_id %></p>

  <div class="mt">
    <%= link_to fa_icon('pencil'), edit_question_path(@question), title: 'Редактировать вопрос' %>
    <%= button_to fa_icon('trash-o'), question_path(@question), method: :delete, title: 'Удалить вопрос' %>
  </div>

  <p class="mt"><%= link_to 'Все вопросы', questions_path %></p>
</div>
